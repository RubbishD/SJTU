<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- button style1-->
    <style name="buttons1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- textview style1-->
    <style name="textViews1">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:autoSizeTextType">none</item>
        <item name="android:background">@color/LemonChiffon</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- textview style2-->
    <style name="textViews2">
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:autoSizeTextType">none</item>
        <item name="android:background">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:ems">10</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- spinner style1-->
    <style name="spinners1">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>
</resources>